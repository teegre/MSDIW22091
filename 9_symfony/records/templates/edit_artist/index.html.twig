{% extends 'base.html.twig' %}

{% block title %}Velvet Records | Edit Artist{% endblock %}

{% block body %}
  <div class="container mt-4 mb-2">
    <div class="row align-items-center">
      <div class="col-md-8"><h1><b>Edit Artist</b></h1></div>
      <div class="col text-right">
        <button class="btn btn-primary btn-sm" onclick="history.back()">Back</button>
      </div>
    </div>
    {{ form_start(form) }}
      <div class="row">
        <div class="col-md-3">
          <img class="img-fluid img-thumbnail" src="/img/{{ picture }}" width="200">
        </div>
      </div>
      {{ form_label(form.artist_name, 'Name', {
        'label_attr': {
          'class': 'col-form-label-sm',
        }
      }) }}
      {{ form_widget(form.artist_name, {
        'attr': {
          'class': 'form-control form-control-sm',
        }
      }) }}
      {{ form_label(form.artist_img, 'Picture', {
        'label_attr': {
          'class' : 'col-form-label-sm',
        }
      }) }}
      {{ form_errors(form.artist_img) }}
      {{ form_widget(form.artist_img, {
        'attr': {
          'class': 'form-control form-control-sm',
          'onchange': 'updatePicture("artist")',
        }
      }) }}
      <div class="d-flex flex-row">
        <div class="m-1">
          {{ form_row(form.save, {
            'attr': {
              'class': 'btn btn-danger btn-sm',
            }
          }) }}
        </div>
        <div class="m-1">
          {{ form_row(form.cancel, {
            'attr': {
              class: 'btn btn-secondary btn-sm',
            }
          }) }}
        </div>
      </div>
      {{ form_end(form) }}
      <script src="/js/script.js"></script>
  </div>
{% endblock %}
