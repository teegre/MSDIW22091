{% extends 'base.html.twig' %}

{% block title %}Velvet Records - Add Artist{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1><b>Add Artist</b></h1>
      </div>
      <div class="col text-right">
        <button class="btn btn-primary btn-sm" onclick="history.back()">Back</button>
      </div>
    </div>
    {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="mb-2">
        {{ form_label(form.artist_name, null, {
          'label': 'Name',
          'label_attr': {
            'class': 'form-label form-label-sm' 
          }
        }) }}
        {{ form_widget(form.artist_name, {'attr': {'class': 'form-control form-control-sm'}}) }}
      </div>
      <div class="mb-2">
        {{ form_label (form.artist_img, null, {
          'label': 'Picture',
          'label_attr': {
            'class': 'form-label form-label-sm'
          }
        }) }}
        {{ form_widget(form.artist_img, {
          'attr': {
            'class': 'form-control form-control-sm'
          }
        }) }}
      </div>
      <div class="mb-2">
        {{ form_row(form.submit, {
          'attr': {
            'class': 'btn btn-danger btn-sm'
          }
        }) }}
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
