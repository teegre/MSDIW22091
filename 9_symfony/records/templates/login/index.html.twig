{% extends 'base.html.twig' %}

{% block title %}Velvet Records | Login{% endblock %}

{% block body %}
  <div class="container mt-4">
    {% if error %}
    <div class="alert alert-danger">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}
    <div class="row d-flex justify-content-center align-items-center">
        <div class="card rounded-3">
          <div class="row g-0">
              <div class="card-body">
                <p class="mb-4"><h1 class="display-4"><b>Login</b></h1></p>
                <hr>
                <form action="{{ path('app_login') }}" method="POST">
                  <p class="small"><strong>Please login to your account</strong></p>
                  <div class="form-group mb-2">
                    <label class="col-form-label-sm" for="email">E-mail</label>
                    <input
                      type="email"
                      id="email"
                      name="_username"
                      class="form-control form-control-sm mb-1"
                      value="{{ last_username }}"
                      required
                    />
                  </div>
                  <div class="form-group mb-4">
                    <label class="col-form-label-sm" for="pwd">Password</label>
                    <input
                      type="password"
                      id="pwd"
                      name="_password"
                      class="form-control form-control-sm mb-1"
                      required
                    />
                  </div>
                  <input type="hidden" name="_target_path" value="/artists">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                  <div class="pt-1 mb-4 pb-1">
                    <input type="submit"class="btn btn-primary btn-block btn-sm" value="Login">
                  </div>
                  <div class="d-flex align-items-center justify-content-center pb-4">
                    <p class="small mb-0 me-2">Don't have an account?</p>
                    <a href="{{ path('app_register') }}"><button type="button" class="btn btn-outline-danger btn-sm">Register</button></a>
                  </div>
                </form>
              </div>
          </div>
        </div>
    </div>
  </div>
{% endblock %}
